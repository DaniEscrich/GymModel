<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_big_24"
    android:background="@drawable/bg_card"
    android:layout_gravity="center"
    android:elevation="@dimen/padding_big_small_8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_terms_300">

        <TextView
            android:id="@+id/tvTermsDialogContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text=""/>
    </ScrollView>

    <Button
        android:id="@+id/btnAceptarDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_accept_term"
        android:layout_marginTop="@dimen/padding_normal_16"
        android:textColor="@color/white"
        android:backgroundTint="@color/color_primary" />
</LinearLayout>
