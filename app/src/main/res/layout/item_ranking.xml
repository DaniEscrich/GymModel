<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_big_small_8"
    app:cardCornerRadius="@dimen/padding_input_12"
    app:cardElevation="@dimen/padding_very_small_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal_16">

        <ImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="@dimen/padding_big_40"
            android:layout_height="@dimen/padding_big_40"
            android:src="@drawable/ic_user"
            android:contentDescription="@string/description_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:text="@string/txt_name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/ivUserIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvValor"
            android:layout_marginStart="@dimen/padding_input_12"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tvValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_weight_example"
            android:textStyle="bold"
            android:textColor="@color/color_primary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
